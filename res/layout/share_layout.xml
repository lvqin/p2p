<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFFFF" >

    <TextView
        android:id="@+id/tvuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/user_pass_title"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="24dp"
        android:text="分享用户："
        android:textColor="#FF000000" />

    <EditText
        android:id="@+id/edtUserID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_pass_title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvuser"
        android:hint="输入用户账号" >
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvuser"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="30dp"
        android:text="分享权限："
        android:textColor="#FF000000" />

    <Spinner
        android:id="@+id/spinnerPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/edtUserID"
        android:layout_alignRight="@+id/edtUserID" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerPer"
        android:layout_marginTop="14dp"
        android:text="" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:orientation="horizontal" 
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="添加分享" android:textColor="#FF000000"/>

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除分享"
            android:textColor="#FF000000" />

    </RadioGroup> 

</RelativeLayout>