<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<RelativeLayout
		android:id="@+id/top_title"
		android:background="#FF117BB9"
		android:layout_width="match_parent"
		android:layout_height="60dip"
		>
		<ImageButton
			android:id="@+id/back_btn"
			android:background="@drawable/back_selector"
			android:layout_width="70dp"
			android:layout_height="50dp"
			android:layout_centerVertical="true"
			>
		</ImageButton>
		<TextView
			android:textSize="23sp"
			android:textColor="#FFFFFFFF"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:text="视频播放"
			android:layout_centerInParent="true"
			>
		</TextView>
		<ImageButton
			android:id="@+id/player_fullscreen"
			android:background="@drawable/full_selector"
			android:layout_width="50dip"
			android:layout_height="50dip"
			android:layout_marginRight="10dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			>
		</ImageButton>
	</RelativeLayout>
	<VideoView
		android:id="@+id/playVideoView"
		android:layout_width="fill_parent"
		android:layout_height="220dip"
		android:layout_below="@+id/top_title"
		/>
	<RelativeLayout
		android:id="@+id/ptz_bar"
		android:background="@drawable/ptz_bar_bg"
		android:layout_width="fill_parent"
		android:layout_height="50dip"
		android:layout_marginTop="280dip"
		>
		<ImageButton
			android:id="@+id/zhangkai_buton"
			android:background="@drawable/ptz_selector"
			android:layout_width="60dip"
			android:layout_height="40dip"
			android:layout_centerInParent="true"
			>
		</ImageButton>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/video_list_layout"
		android:background="#FFCBCBCB"
		android:layout_width="fill_parent"
		android:layout_height="130dip"
		android:layout_below="@+id/ptz_bar"
		>
		<Gallery
			android:id="@+id/videopoints_gallery"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip"
			android:spacing="5dip"
			>
		</Gallery>
	</RelativeLayout>
	<RelativeLayout
		android:orientation="vertical"
		android:id="@+id/shangxia_andsoon"
		android:background="@drawable/ptzlevelbg"
		android:visibility="invisible"
		android:layout_width="fill_parent"
		android:layout_height="120dp"
		android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip"
		android:layout_marginBottom="5dip"
		android:layout_below="@+id/ptz_bar"
		>
		<ImageButton
			android:id="@+id/ptz_left"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginLeft="50dp"
			android:background="@drawable/left_selector"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/ptz_right"
			android:background="@drawable/right_selector"
			android:layout_toRightOf="@+id/ptz_left"
			android:layout_width="50dp"
			android:layout_height="50dp"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/ptz_up"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@drawable/up_selector"
			android:layout_toRightOf="@+id/ptz_right"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/ptz_down"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@drawable/down_selector"
			android:layout_toRightOf="@+id/ptz_up"
			>
		</ImageButton>
		<ImageView
			android:id="@+id/line_"
			android:background="@drawable/fenggeline"
			android:layout_width="fill_parent"
			android:layout_height="1dip"
			android:layout_marginTop="10dip"
			android:layout_below="@+id/ptz_left"
			>
		</ImageView>
		<ImageButton
			android:id="@+id/player_pause"
			android:background="@drawable/stop_selector"
			android:layout_width="65dip"
			android:layout_height="65dip"
			android:layout_marginLeft="5dp"
			android:layout_below="@+id/line_"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/player_vidicon"
			android:background="@drawable/video_selector"
			android:layout_width="65.0dip"
			android:layout_height="65.0dip"
			android:layout_marginLeft="10.0dip"
			android:layout_toRightOf="@+id/player_pause"
			android:layout_below="@+id/line_"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/player_camera"
			android:background="@drawable/photo_selector"
			android:layout_width="65dip"
			android:layout_height="65dip"
			android:layout_marginLeft="10dip"
			android:layout_toRightOf="@+id/player_vidicon"
			android:layout_below="@+id/line_"
			>
		</ImageButton>
		<ImageButton
			android:id="@+id/ecloud_recored"
			android:background="@drawable/ecloud"
			android:layout_width="50dip"
			android:layout_height="40dip"
			android:layout_marginLeft="10dip"
			android:layout_marginTop="5dip"
			android:layout_toRightOf="@+id/player_camera"
			android:layout_below="@+id/line_"
			>
		</ImageButton>
	</RelativeLayout>

	<ProgressBar
	    android:id="@+id/progressBar1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/playVideoView"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="79dp" />

</RelativeLayout>
